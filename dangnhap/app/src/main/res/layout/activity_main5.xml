<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="76dp"
            android:layout_height="40dp"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

        <TextView
            android:layout_width="235dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/tim"
            android:text="Profile" />

        <ImageButton
            android:id="@+id/btnSetting"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:paddingLeft="30dp"
            android:src="@drawable/ic_baseline_settings_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_centerVertical="true"
        android:background="@color/purple_200"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gai"
            android:layout_width="245dp"
            android:layout_height="191dp"
            android:layout_gravity="center"
            android:src="@drawable/gai" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyễn Thị Thư Trang"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2050531200345"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:gravity="center">

        </TextView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="-50dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="3dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/timnhat">

            <RelativeLayout
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="142dp"
                    android:layout_height="92dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
                        android:text="5000"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:text="Friends"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/timnhat"
            android:layout_margin="10dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_baseline_notifications_24"
                        android:text="10000"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:text="Follow"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/edtFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_baseline_supervisor_account_24"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="Nguyễn Thị Thư Trang" />

        <EditText
            android:id="@+id/edtMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_baseline_mail_24"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="tranggiang377@gmail.com" />

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_baseline_smartphone_24"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="0935183250" />

        <EditText
            android:id="@+id/edtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_baseline_add_location_24"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="02 Thanh Sơn, Hải Châu, Đà Nẵng" />

    </LinearLayout>
</LinearLayout>